        <SharedResourceDictionary Source="/CCDevStyling;component/Styles/CustomControls/CircularProgressBar.xaml" />
    </SharedResourceDictionary.MergedDictionaries>

    <!--  Default Style Definitions  -->
    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}" />
    <Style TargetType="ToggleButton" BasedOn="{StaticResource ToggleButtonStyle}" />
    <Style TargetType="ProgressBar" BasedOn="{StaticResource CircularConverterProgressBarStyle}" />
    <Style TargetType="TextBox" BasedOn="{StaticResource WatermarkAttachedTextBoxStyle}" />
    <Style TargetType="ListBox" BasedOn="{StaticResource ListBoxStyle}" />

    <!--  CC Style Definitions  -->
    <Style TargetType="PointChartItem" BasedOn="{StaticResource PointChartItemStyle}" />
    <Style TargetType="PointChart" BasedOn="{StaticResource PointChartStyle}" />
    <Style TargetType="SearchTextBox" BasedOn="{StaticResource SearchTextBoxStyle}" />
    <Style TargetType="CircularProgressBar" BasedOn="{StaticResource CircularProgressBarStyle}" />

</SharedResourceDictionary>