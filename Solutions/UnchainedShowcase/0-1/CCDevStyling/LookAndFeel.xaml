<SharedResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SharedResourceDictionary.MergedDictionaries>
        <SharedResourceDictionary Source="/CCDevStyling;component/BitmapGraphics/Icons.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/BitmapGraphics/Assets.xaml" />

        <SharedResourceDictionary Source="/CCDevStyling;component/VectorGraphics/Icons.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/VectorGraphics/Shapes.xaml" />

        <SharedResourceDictionary Source="/CCDevStyling;component/Colors/Colors.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Colors/Brushes.xaml" />

        <SharedResourceDictionary Source="/CCDevStyling;component/Settings/Settings.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Settings/Typography.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Converters/Converter.xaml" />

        <SharedResourceDictionary Source="/CCDevStyling;component/DataTemplates/DataTemplates.xaml" />

        <SharedResourceDictionary Source="/CCDevStyling;component/Styles/TextBlock.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Styles/Button.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Styles/ToggleButton.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Styles/TextBox.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Styles/ProgressBar.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Styles/Border.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Styles/ContentControl.xaml" />
        <SharedResourceDictionary Source="/CCDevStyling;component/Styles/ListBox.xaml" />
		<SharedResourceDictionary Source="/CCDevStyling;component/Styles/Slider.xaml"/>

