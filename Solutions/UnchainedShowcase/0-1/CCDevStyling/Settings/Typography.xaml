<SharedResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="PrimaryFontFamily">Segoe UI</FontFamily>

    <FontWeight x:Key="RegularFontWeight">Normal</FontWeight>
    <FontWeight x:Key="MediumFontWeight">Medium</FontWeight>
    <FontWeight x:Key="BoldFontWeight">Bold</FontWeight>

    <sys:Double x:Key="Layer0FontSize">36</sys:Double>
    <sys:Double x:Key="Layer1FontSize">22</sys:Double>
    <sys:Double x:Key="Layer2FontSize">16</sys:Double>
    <sys:Double x:Key="Layer3FontSize">18</sys:Double>
    <sys:Double x:Key="Layer4FontSize">14</sys:Double>
    <sys:Double x:Key="Layer5FontSize">12</sys:Double>

</SharedResourceDictionary>